<% if(locals.errors){ %> 
    <% errors.forEach(error => { %>
        <div class="alert">
            <span class="closebtn">&times;</span>  
            <%= error %>
        </div>
    <% }) %> 
<% } %> 



<% if(locals.success_msg){ %>
    <div class="alert success">
        <span class="closebtn">&times;</span>  
        <%= locals.success_msg %>
    </div>
<% } %> 

<% if(locals.error_msg){ %>
    <div class="alert">
        <span class="closebtn">&times;</span>  
        <%= locals.error_msg %>
    </div>
<% } %> 

<% if(locals.warning_msg){ %>
    <div class="alert warning">
        <span class="closebtn">&times;</span>  
        <%= locals.warning_msg %>
    </div>
<% } %>