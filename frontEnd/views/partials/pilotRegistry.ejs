<div>
    <div class="tbl-header">
        <table cellpadding="0" cellspacing="0" border="0">
            <thead>
                <tr>
                    <th class="count">S.No.</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Email</th>
                </tr>
            </thead>
        </table>
    </div>
    <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
            <tbody>
                <% if (!locals.drone.pilotRegistry[0]) { %>
                    <div style="text-align: center;"><p>There are no pilot availabe.</p></div>
                <% } else { %>
                    <% let count = 1 %>
                    <% locals.drone.pilotRegistry.forEach(pilot => { %>
                        <% let date = new Date(pilot.date) %>
                        <% let dateString = date.toDateString() %>
                        <% let time = date.toTimeString() %>
                        <tr>
                            <td class='count'><%= count %></td>
                            <td><%= dateString %></td>
                            <td><%= time %></td>
                            <td><%= pilot.email %></td>
                        </tr>
                        <%  count++ %>
                    <% }) %>
                <% } %>
            
            </tbody>
        </table>
    </div>
</div>